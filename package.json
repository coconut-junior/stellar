{
  "name": "stellar",
  "productName": "Stellar",
  "version": "1.5.1",
  "description": "Easily automate Adobe InDesign tasks.",
  "main": "dist/main.js",
  "scripts": {
    "copyResources": "copyfiles -f * dist && copyfiles -f fonts/* dist/fonts && copyfiles images/* dist/images",
    "compile": "tsc && npm run copyResources",
    "start": "npm run compile && electron .",
    "lint": "echo \"No linting configured\"",
    "release": "npm run compile && electron-builder -mw --arm64 --x64"
  },
  "build": {
    "publish": {
      "provider": "github",
      "owner": "coconut-junior",
      "repo": "stellar"
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "appId": "design.jbx.stellar",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "zip",
        "dmg"
      ]
    }
  },
  "repository": "https://github.com/coconut-junior/stellar",
  "keywords": [],
  "author": {
    "name": "Jimmy Blanck",
    "email": "blanckjm@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@adobe/target-nodejs-sdk": "^2.4.3",
    "@electron/notarize": "^2.4.0",
    "@fingerprintjs/fingerprintjs": "^4.5.0",
    "decompress": "^4.2.1",
    "dialog-node": "^0.2.1",
    "dotenv": "^16.4.5",
    "electron-forge": "^5.2.4",
    "electron-notarize": "^1.2.2",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^5.0.0",
    "electron-updater": "^6.3.4",
    "env-paths": "^3.0.0",
    "extract-zip": "^2.0.1",
    "gsap": "^3.12.5",
    "interactjs": "^1.10.27",
    "jquery": "^3.7.1",
    "license": "^1.0.3",
    "node-stream-zip": "^1.15.0",
    "node-xlsx": "^0.24.0",
    "party-js": "^2.2.0",
    "request": "^2.88.2",
    "save": "^2.9.0",
    "universal-tilt.js": "^2.0.6",
    "update-electron-app": "^3.1.1",
    "xlsx": "^0.19.3"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.4.0",
    "@types/jquery": "^3.5.32",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "copyfiles": "^2.4.1",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "eslint": "^9.10.0",
    "node": "^22.8.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2"
  }
}
